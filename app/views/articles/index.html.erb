<div id="main">
  <%= image_tag "/main-img.jpg" %>
</div>

<div id="article_wrap">

  <% @articles.each do |article| %>
    <div id="article_list">
      <div>
        <h2><%= article.title %></h2>
        <p><%= article.created_at.strftime('%Y/%m/%d') %></p>
        <% if user_signed_in? %>
          <td><%= link_to "編集", edit_article_path(article) %></td>
          <td><%= link_to '削除', article_path(article), method: :delete, data:{confirm:"「#{article.title}」を削除しますか？"} %></td>
        <% end %>
      </div>
    </div>
  <% end %>

  <div id="sidebar">

    <h2>★PV数ランキング</h2>
