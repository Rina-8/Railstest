<div id="title">
  <div>
    <p><%= @article.created_at.strftime('%Y/%m/%d') %>/書いた人: <%= @user.email %></p>
    <h1><%= @article.title %></h1>
  </div>
</div>

<div id="article_wrap">

  <div id="content">
    <%= @article.content %>
  </div>


  <div id="sidebar">

    <h2>★PV数ランキング</h2>
      <ul>
        <% @ranking.each do |rank| %>
          <li>
            <% article = Article.find_by(title: rank.first) %>
            <%= link_to rank.first, articles_path(article) %>
            <span>
              <%= " (#{rank.last.to_i.floor}PV)" %>
            </span>
          </li>
        <% end %>
      </ul>
  </div>
  <div class="clear"></div>
</div>