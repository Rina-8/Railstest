<div id="title">
  <div>
    <p><%= @article.created_at.strftime('%Y/%m/%d') %>/書いた人: <%= @user.email %></p>
    <h1><%= @article.title %></h1>
  </div>
</div>

<div id="article_wrap">

  <div id="content">
    <%= @article.content %>
  </div>


  <div id="sidebar">

    <h2>★PV数ランキング</h2>
    <ul>
    <% @articles.each do |article| %>
      <li><%= link_to article.title, article_path(article) %><span>(  pv)</span></li>
    <% end %>
  </ul>
  </div>
  <div class="clear"></div>
</div>