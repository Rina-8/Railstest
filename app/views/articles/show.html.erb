<div id="title">
  <div>
    <p><%= @article.created_at.strftime('%Y/%m/%d') %>/書いた人: <%= @user.email %></p>
    <h1><%= @article.title %></h1>
  </div>
</div>

<div id="article_wrap">

  <div id="content">
    <%= @article.content %>
  </div>


  <div id="sidebar">

    <h2>★PV数ランキング</h2>
    <ul>
      <% @articles.each do |article| %>
        <li><a href="/articles/<%= article.id %>"><%= article.title %><span>（<%= @ranking_articles.count %> PV）</span></a></li>
      <% end %>
    </ul>
  </div>
  <div class="clear"></div>
</div>